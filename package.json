{
  "name": "vsts-npm-auth-improved",
  "version": "1.0.0",
  "author": "Eduardo Serrano",
  "description": "Authenticate with a private Azure DevOps NPM registry",
  "bin": {
    "vsts-npm-auth-improved": "cjs/main.js"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.lib.json",
    "copy-package-readme": "cp-cli ./README.md dist/vsts-npm-auth-improved/README.md",
    "copy-package-json": "clear-package-json package.json -o dist/vsts-npm-auth-improved/package.json",
    "prepack": "npm run build && npm run copy-package-json && npm run copy-package-readme && mkdirp ./dist/vsts-npm-auth-improved-package",
    "pack": "npm pack ./dist/vsts-npm-auth-improved --pack-destination ./dist/vsts-npm-auth-improved-package && echo Package available at ./dist/vsts-npm-auth-improved-package",
    "test": "vitest run",
    "test:update-snapshots": "npm test -- -u",
    "test:watch": "vitest",
    "test:coverage": "npm test -- --coverage"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.13",
    "@vitest/ui": "^4.0.13",
    "clean-publish": "^6.0.1",
    "cp-cli": "^2.0.0",
    "mkdirp": "^3.0.1",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  },
  "keywords": [
    "azure-devops",
    "npm",
    "registry",
    "authentication",
    "azdo",
    "vsts-npm-auth"
  ]
}
